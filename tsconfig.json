{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "esnext",
    "paths": {
      "@dist/*": [
        "dist/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@view/*": [
        "view/*"
      ]
    },
    "sourceMap": true,
    "target": "es5",
    "types": [
      "puppeteer",
      "jest-environment-puppeteer",
      "expect-puppeteer"
    ]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "coverage",
    "dist",
    "node_modules"
  ]
}
